import java.io.IOException;


public class BakeryClient {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Robot robot = new Robot();
		Mixer mixer = new Mixer();
		Cutter cutter = new Cutter();
		Heater heater = new Heater();
		Packer packer = new Packer();
		
		
		robot.turnOn();
		robot.move("брашно", "склад", "миксер");
		robot.move("сол", "склад", "миксер");
		robot.move("захар", "склад", "миксер");
		robot.move("вода", "склад", "миксер");
		robot.move("мая", "склад", "миксер");
		
		mixer.turnOn();
		mixer.mix();
		mixer.turnOff();
		
		robot.move("тесто", "миксер", "машина за рязане");
		
		cutter.turnOn();
		cutter.cutDough();
		cutter.turnOff();
		
		robot.move("нарязано тесто", "машина за рязане", "нагревател");
		
		heater.turnOn();
		heater.bakeBread();
		heater.turnOff();
		
		robot.move("хляб", "нагревател", "опаковъчна машина");
		
		packer.turnOn();
		packer.packBread();
		packer.turnOff();
		
		robot.move("хляб", "опаковъчна машина", "склад");
		robot.turnOff();
	}

}
